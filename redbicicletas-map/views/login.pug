//-
extends layout

block head
  script(src="https://accounts.google.com/gsi/client", async, defer)
  

block content
  script(src="/javascripts/auth.js")

  div.container
    div.row
      div.col-md-4.offset-md-4
        div.card
          div.card-body
            div.text-center.mb-3
              h3 Login
            div(id="g_id_onload",
            data-client_id="1002985450292-dgq7n1gmo12l81ufbbaqspcn1id9cqfm.apps.googleusercontent.com",
            data-callback="onSignIn")

            div(class="g_id_signin",
            data-type="standard",
            data-ux_mode="popup"
            data-shape="pill",
            data-theme="filled_blue",
            data-text="signin_with",
            data-size="medium",
            data-width="40",
            data-logo_alignment="left")

            a(href="/logout") Sign out

            
    
    

